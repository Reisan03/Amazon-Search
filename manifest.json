{
    "manifest_version": 2,
    "name": "Amazon Searcher",
    "version": "1.0",
    "description": "選択した範囲をAmazon.co.jpで検索します。",

    "background": {
        "scripts": ["search.js"],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "declarativeContent",
        "storage",
        "windows"
    ]
}